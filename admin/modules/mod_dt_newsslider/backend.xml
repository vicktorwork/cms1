<?xml version="1.0" encoding="utf-8"?>
<backend>    
    <module>
        <id>mod_dt_newsslider</id>
        <title>DT Слайдер новостей</title>
    </module>
	<params>
	    <param type="number" name="newscount" default="5" />
		<param type="list_db" name="cat_id" src="cms_category" src_title="title" src_value="id" src_where="published='1' AND NSLevel>0" tree="1" >
			<option value="0" />
		</param>
		<param type="flag" name="subs" default="on" />
	
		<param type="list" name="style" title="style" default="1">
            <option value="1" />
            <option value="2" />
			<option value="3" />
			<option value="4" />
			<option value="5" />
			<option value="6" />
			<option value="7" />
			<option value="8" />
			<option value="9" />
			<option value="10" />
			<option value="11" />
			<option value="12" />
			<option value="13" />
			<option value="14" />
			<option value="15" />
			<option value="16" />
        </param>
		
		<param type="number" name="substyle" default="1" />
		<param type="number" name="listwidth" default="0" />
		<param type="number" name="sliderheight" default="300" />
		<param type="flag" name="noimage" default="off" />
		<param type="flag" name="noshadow" default="off" />
				
        <param type="number" name="speed" default="500" />
		<param type="number" name="duration" default="5000" />
		<param type="flag" name="pause" default="on" />
		<param type="list" name="event" title="event" default="1">
            <option value="click" />
            <option value="hover" />
        </param>
				
		<param type="number" name="ctitle" default="50" />
		<param type="number" name="cdesc" default="200" />
		<param type="flag" name="anons" default="1" />
		<param type="flag" name="smallimg" default="off" />
		<param type="flag" name="fullimg" default="on" />
    </params>
</backend>
